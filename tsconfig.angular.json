{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/angular",
    "rootDir": "./",
    "rootDirs": ["./src/angular", "./src/components", "./src/styles"],
    "declaration": true,
    "declarationMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmit": false,
    "target": "ES2020",
    "module": "ES2020"
  },
  "angularCompilerOptions": {
    "compilationMode": "partial"
  },
  "exclude": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.stories.tsx"
  ],
  "include": [
    "src/public-api.angular.ts",
    "src/angular/**/*",
    "src/components/Button/**/*.ts",
    "src/styles/**/*.ts"
  ]
}
